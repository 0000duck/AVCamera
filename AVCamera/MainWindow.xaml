<Window x:Class="AVCamera.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="460" Width="500" Closed="Window_Closed" WindowStyle="SingleBorderWindow" ResizeMode="CanMinimize">
    <Grid Height="426" Width="471">
        <Button Name="StartButton" Content="开始" Margin="101,344,306,12" Click="StartButton_Click"/>
        <Button Name="PauseButton" Content="暂停" Margin="101,344,306,12" Click="PauseButton_Click" Visibility="Hidden"/>
        <Button Name="StopButton" Content="停止" Margin="303,344,104,12" Click="StopButton_Click"/>
        <Image Name="VideoImage" Height="283" Stretch="Fill" VerticalAlignment="Top"/>
        <Button Name="ExportPathButton" Content="浏览" Height="23" HorizontalAlignment="Left" Margin="268,308,0,0" VerticalAlignment="Top" Width="75" Click="ExportPathButton_Click" />
        <TextBox Name="ExportPathTextBox" Height="23" HorizontalAlignment="Left" Margin="12,308,0,0"  VerticalAlignment="Top" Width="250" ToolTip="录像保存路径"/>
    </Grid>
</Window>

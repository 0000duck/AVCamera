<Window x:Class="AVCamera.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:AVCamera"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <local:ButtonStatus x:Key="buttonStatus"/>
        <Style x:Key="userright" TargetType="Button">
            <Setter Property="Height" Value="88"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Button Name="StartButton" Content="Start" Margin="162,65,183,177" Click="StartButton_Click" 
                IsEnabled="{Binding Converter={StaticResource buttonStatus}, ConverterParameter=Start}" Style="{StaticResource userright}"/>
        <Button Name="PauseButton" Content="Pause" Margin="41,163,304,79" Click="PauseButton_Click"  
                IsEnabled="{Binding Converter={StaticResource buttonStatus}, ConverterParameter=Pause}" Style="{StaticResource userright}"/>
        <Button Name="StopButton" Content="Stop" Margin="274,163,71,79" Click="StopButton_Click"  
                IsEnabled="{Binding Converter={StaticResource buttonStatus}, ConverterParameter=Stop}" Style="{StaticResource userright}"/>
    </Grid>
</Window>
